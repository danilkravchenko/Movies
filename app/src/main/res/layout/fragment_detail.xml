<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krava.movies.DetailActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:paddingRight="80dp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_activity_margin"
            android:layout_marginLeft="@dimen/detail_activity_margin"
            android:layout_marginRight="@dimen/detail_activity_margin"
            android:layout_marginTop="@dimen/detail_activity_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movie_thumbnail_imageview"
                android:layout_width="@dimen/thumbnail_width"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_activity_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_date_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/detail_activity_margin"
                    android:textAlignment="center"
                    android:textSize="@dimen/year_text_size" />

                <TextView
                    android:id="@+id/movie_rate_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="@dimen/info_text_size" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/movie_overview_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/detail_activity_margin"
            android:layout_marginLeft="@dimen/detail_activity_margin"
            android:layout_marginRight="@dimen/detail_activity_margin"
            android:layout_marginTop="@dimen/detail_activity_margin"
            android:textSize="@dimen/overview_text_size" />
    </LinearLayout>

</ScrollView>
